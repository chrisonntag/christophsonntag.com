{% extends "base.twig" %}

{% block title %}Blog{% endblock %}
{% block head %}
  {{ parent() }}
  <script type="text/x-mathjax-config">
  MathJax.Hub.Config({
    tex2jax: {
      inlineMath: [ ['$','$'], ["\\(","\\)"] ],
      displayMath: [ ['$$','$$'] ],
      processEscapes: true,
      skipTags: ["script","noscript","style","textarea","pre","code"]
    }
  });
  </script>
  <script type="text/javascript" async src="https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-MML-AM_CHTML"></script>
{% endblock %}

{% block content %}
  {% set breadcrumb = "Blog" %}
  {{ parent() }}
  <div class="container">

    {% set cols = 3 %}
    {% for article in articles %}
      {% if loop.index0 % cols == 0 %}
        <div class="row">
      {% endif %}
      <div class="col-{{ 12/cols }}">
        <div class="masonry-inner">
          <div class="headline">
            <a href="{{ url_for('article', {'slug': article.meta.slug}) }}">
              <img src="{{ url_for('article', {'slug': article.meta.slug}) }}/{{ article.meta.image }}" />
              <h2 class="p6">{{ article.meta.title }}</h2>
            </a>
            <span class="subtitle">
            {{ article.meta.author }} | {{ article.meta.date|date("d.m.Y") }}
          </span>
          </div>
          <p>
            {{ article.content|raw }}
          </p>
          <br />
        </div>
      </div>
      {% if (loop.index0 % cols == cols - 1 or loop.last) %}
        </div>
      {% endif %}
    {% endfor %}

  </div>

{% endblock %}